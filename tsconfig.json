{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "declaration": true,
    "removeComments": true,
    "target": "ES2022",
    "module": "preserve",
    "rootDir": "src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts"
  ]
}
